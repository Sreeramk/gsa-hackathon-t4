<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/sensor_value"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/sensor_value_hint"
       />
    <EditText
        android:id="@+id/AC_value"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/WC_value_hint"
        />
    <EditText
        android:id="@+id/Bathroom_value"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/AC_value_hint"
         />
    <Button
        android:id="@+id/post_button"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_text"
        android:onClick="callPostData"/>
    <Button
        android:id="@+id/check_button"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/check_text"
       />
       />
    <ListView android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
       />

</LinearLayout><!-- From: file:/C:/Users/Gene/Desktop/Githubs/HackathonGSA/GoogleFormUploadExample-master/GoogleFormUploadExample-master/app/src/main/res/layout/activity_main.xml -->